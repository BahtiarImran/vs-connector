		</TabControl>
		<StackPanel 
			HorizontalAlignment="Center"
			Grid.ColumnSpan="2"
			Orientation="Horizontal"
			Grid.Row="1">
			<Button 
				Height="24"
				Width="50"
				Content="Save"
				x:Name="buttonSave"
				HorizontalAlignment="Center" 
				Click="ButtonSaveClick" MouseEnter="OnButtonSaveMouseEnter" MouseLeave="OnButtonSaveMouseLeave" IsDefault="True" />
			<Button 
				Height="24"
				Width="50"
				Content="Cancel"
				Margin="12,0,0,0"
				x:Name="buttonClose"
				HorizontalAlignment="Center" 
				MouseEnter="OnButtonSaveMouseEnter" MouseLeave="OnButtonSaveMouseLeave" Click="OnButtonCloseClick" IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>